<% provide(:page_title, "My Tasks") %>
<% provide(:tasks_active, 'active') %>

<div class="container">
  <div class="row">
    <% @tasks.each do |t| %>
    <%= t.title %>
      <div class="col-md-4">
        <div class="card">
          <i class="fas fa-list-ul"></i>
          <div class="card-body">
            <h5 class="card-title"><%= t.title %></h5>
            <%= link_to "Done", user_task_path(current_user, t), method: :delete, class: 'btn btn-primary' %>
            <%= link_to "Details", user_task_path(current_user, t), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
