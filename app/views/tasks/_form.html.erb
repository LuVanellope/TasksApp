<% provide(:page_title, "New Task") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-3 my-5">
      <h1>Create a new Task!</h1>
      <%= form_with model: ([@user, @task]) do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
        </div>
        <div class="form-group">
          <%= f.text_field :description, class: 'form-control', placeholder: 'Description' %>
        </div>
        <%= f.submit "Create", class: 'btn btn-primary btn-sm btn-block font-weight-bold' %>
      <% end %>
    </div>
  </div>
</div>
